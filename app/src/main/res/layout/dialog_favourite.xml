<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/purple_back">

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:fontFamily="@font/quicksand"
        android:hint="@string/favourite_dialog_name_hint"
        android:importantForAutofill="no"
        android:inputType="textNoSuggestions"
        android:paddingHorizontal="10dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textColorHint="@color/strong_grey"
        android:textSize="@dimen/text_size_big"
        android:imeOptions="actionDone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/favourite_buttons"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="20dp"
        android:checkedButton="@id/favourite_home_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name">

        <RadioButton
            android:id="@+id/favourite_home_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginVertical="5dp"
            android:paddingBottom="@dimen/purple_border_height"
            android:background="@drawable/button_radio"
            android:button="@null"
            android:fontFamily="@font/quicksand"
            android:gravity="center"
            android:text="@string/favourite_home_text"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_big" />

        <RadioButton
            android:id="@+id/favourite_work_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginVertical="5dp"
            android:paddingBottom="@dimen/purple_border_height"
            android:background="@drawable/button_radio"
            android:button="@null"
            android:fontFamily="@font/quicksand"
            android:gravity="center"
            android:text="@string/favourite_work_text"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_big" />

        <RadioButton
            android:id="@+id/favourite_school_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginVertical="5dp"
            android:paddingBottom="@dimen/purple_border_height"
            android:background="@drawable/button_radio"
            android:button="@null"
            android:fontFamily="@font/quicksand"
            android:gravity="center"
            android:text="@string/favourite_school_text"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_big" />

        <RadioButton
            android:id="@+id/favourite_other_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginVertical="5dp"
            android:paddingBottom="@dimen/purple_border_height"
            android:background="@drawable/button_radio"
            android:button="@null"
            android:fontFamily="@font/quicksand"
            android:gravity="center"
            android:text="@string/favourite_other_text"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_big" />

    </RadioGroup>
</androidx.constraintlayout.widget.ConstraintLayout>